{
  "name": "RooTrace",
  "displayName": "RooTrace - MCP Integration for Roo Code",
  "description": "Advanced debugging and tracing functionality with MCP integration for Roo Code",
  "version": "0.0.1",
  "publisher": "roo-trace-dev",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:roo-code.setRoleDebugger",
    "workspaceContains:.ai_debug_config"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rooTrace.startServer",
        "title": "Start RooTrace Server"
      },
      {
        "command": "rooTrace.stopServer",
        "title": "Stop RooTrace Server"
      },
      {
        "command": "debugSidecar.clearLogs",
        "title": "Clear AI Debugger Logs"
      },
      {
        "command": "ai-debugger.openDashboard",
        "title": "Open RooTrace Dashboard"
      },
      {
        "command": "ai-debugger.cleanup",
        "title": "Cleanup RooTrace Debug Code"
      }
    ],
    "mcpServers": {
      "roo-trace": {
        "command": "node",
        "args": [
          "./out/mcp-server.js"
        ]
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test:mcp": "node scripts/test-mcp-integration.js",
    "verify": "node scripts/verify-build.js"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.74.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2"
  }
}
